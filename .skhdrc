# skhd config - vim-style window management

# Focus windows (alt + hjkl)
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Move windows (shift + alt + hjkl)
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Move window to space (shift + alt + number)
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5

# Focus space (alt + number)
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5

# Resize windows (ctrl + alt + hjkl)
ctrl + alt - h : yabai -m window --resize left:-50:0; yabai -m window --resize right:-50:0
ctrl + alt - j : yabai -m window --resize bottom:0:50; yabai -m window --resize top:0:50
ctrl + alt - k : yabai -m window --resize top:0:-50; yabai -m window --resize bottom:0:-50
ctrl + alt - l : yabai -m window --resize right:50:0; yabai -m window --resize left:50:0

# Toggle window states
alt - f : yabai -m window --toggle zoom-fullscreen
alt - t : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2
alt - s : yabai -m window --toggle sticky
alt - p : yabai -m window --toggle pip

# Layout toggles
alt - b : yabai -m space --layout bsp
alt - z : yabai -m space --layout stack

# Rotate tree
alt - r : yabai -m space --rotate 90
shift + alt - r : yabai -m space --rotate 270

# Balance windows
alt - e : yabai -m space --balance

# Focus display (alt + comma/period)
alt - 0x2B : yabai -m display --focus prev
alt - 0x2F : yabai -m display --focus next

# Move window to display
shift + alt - 0x2B : yabai -m window --display prev; yabai -m display --focus prev
shift + alt - 0x2F : yabai -m window --display next; yabai -m display --focus next

# Quick launch
alt - return : open -a "iTerm"
alt - w : open -a "Arc"

# Restart yabai/skhd
ctrl + alt - r : yabai --restart-service; skhd --restart-service
