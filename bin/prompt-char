#!/bin/bash
# Outputs prompt character with PROMPT_ACCENT color (or default magenta)
# Used by starship custom module

color="${PROMPT_ACCENT:-#ff00f8}"

# Convert hex to RGB for 24-bit color
if [[ "$color" =~ ^#([0-9a-fA-F]{2})([0-9a-fA-F]{2})([0-9a-fA-F]{2})$ ]]; then
  r=$((16#${BASH_REMATCH[1]}))
  g=$((16#${BASH_REMATCH[2]}))
  b=$((16#${BASH_REMATCH[3]}))
  printf '\033[38;2;%d;%d;%dm>\033[0m' "$r" "$g" "$b"
else
  # Fallback: magenta
  printf '\033[35m>\033[0m'
fi
